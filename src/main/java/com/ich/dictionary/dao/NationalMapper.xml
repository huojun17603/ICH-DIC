<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ich.dictionary.dao.NationalMapper" >

    <insert id="insert" parameterType="com.ich.dictionary.pojo.National"  useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO ich_dic_national(name,code,status,onum)
        VALUES(#{name},#{code},0,#{onum})
    </insert>

    <update id="update" parameterType="com.ich.dictionary.pojo.National">
        UPDATE ich_dic_national SET name = #{name},code = #{code},onum = #{onum}
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE ich_dic_national SET status = #{status}
        WHERE id = #{id}
    </update>

    <select id="selectByPrimaryKey" parameterType="Long" resultType="com.ich.dictionary.pojo.National">
        SELECT * FROM ich_dic_national WHERE id = #{id}
    </select>

    <select id="selectNationals"  resultType="com.ich.dictionary.pojo.National">
        SELECT * FROM ich_dic_national WHERE status = 1 ORDER BY onum DESC
    </select>

</mapper>