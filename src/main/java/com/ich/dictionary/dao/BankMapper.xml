<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ich.dictionary.dao.BankMapper" >

    <insert id="insert" parameterType="com.ich.dictionary.pojo.Bank"  useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO ich_dic_bank(name,code,themecode,status,onum)
        VALUES(#{name},#{code},#{themecode},0,#{onum})
    </insert>

    <update id="update" parameterType="com.ich.dictionary.pojo.Bank">
        UPDATE ich_dic_bank SET name = #{name},code = #{code},themecode = #{themecode},onum = #{onum}
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE ich_dic_bank SET status = #{status}
        WHERE id = #{id}
    </update>

    <select id="selectByPrimaryKey" parameterType="Long" resultType="com.ich.dictionary.pojo.Bank">
        SELECT * FROM ich_dic_bank WHERE id = #{id}
    </select>

    <select id="selectBanks"  resultType="com.ich.dictionary.pojo.Bank">
        SELECT * FROM ich_dic_bank WHERE status = 1 ORDER BY onum DESC
    </select>

    <select id="selectAllList"  resultType="com.ich.dictionary.pojo.Bank">
        SELECT * FROM ich_dic_bank ORDER BY onum DESC
    </select>

</mapper>